<Window x:Class="SystemBiblioteczny.Admin_LocalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemBiblioteczny"
        mc:Ignorable="d"
        Title="Admin_LocalWindow" Height="432" Width="786" MaxWidth="800" MaxHeight="450" MinWidth="800" MinHeight="450">
    <Grid>

        <TabControl>
            <TabItem Header="Zarządzaj wieczorkiem autorskim">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Wyloguj" HorizontalAlignment="Left" Margin="704,353,0,0" VerticalAlignment="Top" Height="43" Width="80" Click="Return"/>
                </Grid>

            </TabItem>
            <TabItem Header="Wymień się książkami">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="TableExchangeBooks" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="784" Height="203" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header ="Id wymiany" Binding="{Binding ExchangeId}" Width="70"/>
                            <DataGridTextColumn Header ="Id książki" Binding="{Binding Id_Book}" Width="70"/>
                            <DataGridTextColumn Header ="Prośba od" Binding="{Binding RequestorUsername}" Width="100"/>
                            <DataGridTextColumn Header ="Prośba do" Binding="{Binding ReceiverUsername}" Width="100"/>
                            <DataGridTextColumn Header ="Autor" Binding="{Binding Author}" Width="140"/>
                            <DataGridTextColumn Header ="Tytuł" Binding="{Binding Title}" Width="150"/>
                            <DataGridCheckBoxColumn Header ="Dostępność" Binding="{Binding Availability}" Width="80"/>
                            <DataGridTextColumn Header ="Id biblioteki" Binding="{Binding Id_Library}" Width="70"/>
                        </DataGrid.Columns>
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="DarkMagenta"/>
                                <Setter Property="BorderThickness" Value="0,0,1,2"/>
                                <Setter Property="BorderBrush" Value="White"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>

                    <Label Content="Twoje dane" HorizontalAlignment="Left" Margin="645,228,0,0" VerticalAlignment="Top"/>
                    <Label Content="Nazwa użytkownika" HorizontalAlignment="Left" Margin="560,271,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="nazwaLabel" Content="nazwa" HorizontalAlignment="Left" Margin="693,271,0,0" VerticalAlignment="Top" Width="80"/>
                    <Label Content="Numer biblioteki" HorizontalAlignment="Left" Margin="560,310,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="numerLabel" Content="numer" HorizontalAlignment="Left" Margin="693,310,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="SendBook" Content="Wyślij dostępną książkę" HorizontalAlignment="Left" Margin="176,308,0,0" VerticalAlignment="Top" Click="Button_Click" Height="40" Width="162" Background="#FFCCA2DC"/>
                    <Label Content="Id wymiany" HorizontalAlignment="Left" Margin="176,235,0,0" VerticalAlignment="Top" Width="162"/>
                    <TextBox x:Name="SendBookLabel" HorizontalAlignment="Left" Margin="176,266,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="162"/>
                </Grid>
            </TabItem>
            <TabItem Header="Wygeneruj raport">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Zarządzaj kontami">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
