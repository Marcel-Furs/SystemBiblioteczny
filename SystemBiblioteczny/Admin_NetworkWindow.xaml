<Window x:Class="SystemBiblioteczny.Admin_NetworkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemBiblioteczny"
        mc:Ignorable="d"
        Title="Admin_NetworkWindow" Height="432" Width="786" MaxWidth="800" MaxHeight="450" MinWidth="800" MinHeight="450">
    <Grid>
        <TabControl>
            <TabItem Header="Dodaj bibliotekę">
                <Grid Background="#FFE5E5E5">
                    <Grid Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="403*"/>
                            <ColumnDefinition Width="0*"/>
                            <ColumnDefinition Width="0*"/>
                            <ColumnDefinition Width="0*"/>
                            <ColumnDefinition Width="391*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Margin="205,8,205,8" Grid.ColumnSpan="5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" FontSize="24" HorizontalAlignment="Left" Content="NOWA BIBLIOTEKA" Margin="79,1,0,4" Width="303"/>
                            <Label Content="Miasto:" Margin="-18,18,0,33" Grid.RowSpan="2" HorizontalAlignment="Left" Width="191" FontSize="16" Grid.Row="1"/>
                            <TextBox x:Name="City" HorizontalAlignment="Left" Margin="173,18,0,4" Width="191" Grid.Row="1" Height="20"/>
                            <Label Grid.Row="2" Content="Ulica:" Margin="-18,11,0,41" HorizontalAlignment="Left" Width="191" FontSize="16" Grid.RowSpan="2" />
                            <TextBox Grid.Row="2" x:Name="Street"  HorizontalAlignment="Left" Margin="173,14,0,9" Width="191" Height="20"/>
                            <Label Grid.Row="3" Content="Numer:" HorizontalAlignment="Left" Margin="-18,14,0,39" Width="191" FontSize="16" Grid.RowSpan="2" />
                            <TextBox Grid.Row="3" x:Name="Number" HorizontalAlignment="Left" Margin="173,14,0,9" Width="191" Height="20"/>

                            <Button Grid.Row="8" Click="Add_Library" FontSize="20" Content="DODAJ" Margin="-7,0,15,3"/>
                        </Grid>

                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Usuń bibliotekę">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Nadawa/Odbierz uprawnienia">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>            
            <TabItem Header="Utwórz raport">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ustawienia">
                <Button Content="Wyloguj" Height="39" Width="80" Click="Return" Margin="329,0,385,0"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
