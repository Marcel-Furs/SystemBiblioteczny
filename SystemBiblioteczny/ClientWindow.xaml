<Window x:Class="SystemBiblioteczny.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemBiblioteczny"
        mc:Ignorable="d"
        Title="ClientWindow" Height="432" Width="786" MaxWidth="800" MaxHeight="450" MinWidth="800" MinHeight="450">
    <Grid>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Wypożycz Książkę" >
                <Label Content="Chłopaki czekamy na wyświetlanie bazy książek :/" />
            </TabItem>
            <TabItem Header="Wieczorki Autorskie">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="403*"/>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="391*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Margin="24,0,386,16" Grid.ColumnSpan="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="43*"/>
                            <ColumnDefinition Width="251*"/>
                            <ColumnDefinition Width="90*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" FontSize="24" HorizontalAlignment="Left" Content="ZGŁOSZENIE" Margin="61,1,0,4" Width="141" Grid.Column="1"/>
                        <Label Content="Imię autora:" Margin="-18,18,0,33" Grid.RowSpan="2" HorizontalAlignment="Left" Width="191" FontSize="16" Grid.Row="1" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="AuthorsName" HorizontalAlignment="Left" Margin="130,19,0,5" Width="191" Grid.Row="1" Height="20" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <Label Grid.Row="2" Content="Nazwisko autora:" Margin="-18,11,0,41" HorizontalAlignment="Left" Width="191" FontSize="16" Grid.RowSpan="2" Grid.ColumnSpan="2" />
                        <TextBox Grid.Row="2" x:Name="AuthotsLastname"  HorizontalAlignment="Left" Margin="130,14,0,9" Width="191" Height="20" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <Label Grid.Row="3" Content="Numer biblioteki:" HorizontalAlignment="Left" Margin="-18,14,0,39" Width="191" FontSize="16" Grid.RowSpan="2" Grid.ColumnSpan="2" />
                        <TextBox Grid.Row="3" x:Name="LibraryID" HorizontalAlignment="Left" Margin="130,14,0,9" Width="191" Height="20" Grid.ColumnSpan="2" Grid.Column="1"/>

                        <Button Grid.Row="8" Click="Register_Evening" FontSize="20" Content="Register" Margin="-7,0,15,3" Grid.ColumnSpan="3"/>
                        <Label Grid.Row="4" Content="Data:" HorizontalAlignment="Left" Margin="-18,9,0,39" Grid.RowSpan="2" Width="191" FontSize="16" Grid.ColumnSpan="2" />
                        <DatePicker Grid.Row="4" x:Name="Date" HorizontalAlignment="Left" Margin="130,11,0,13" Width="191" Height="20" FontSize="12" Text="Kiedy wieczorer bq" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <Label Grid.Row="5" Content="Godzina:" HorizontalAlignment="Left" Margin="-18,6,0,42" Grid.RowSpan="2" Width="191" FontSize="16" Grid.ColumnSpan="2" />
                        <Label Grid.Row="6" Content="Czas trwania (w minutach):" HorizontalAlignment="Left" Margin="-18,6,0,0" Width="191" FontSize="16" Grid.ColumnSpan="2" />
                        <Label Grid.Row="7" Content="Telefon kontaktowy:" HorizontalAlignment="Left" Margin="-18,2,0,1" Width="191" FontSize="16" Grid.ColumnSpan="2" />
                        <TextBox Grid.Row="5" x:Name="RegisterLastname" HorizontalAlignment="Left" Margin="130,8,0,15" Width="191" Height="20" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <TextBox Grid.Row="6" x:Name="RegisterEmailAddress" HorizontalAlignment="Left" Margin="130,6,0,17" Width="191" Height="20" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <TextBox x:Name="RegisterPhoneNumber" HorizontalAlignment="Left" Margin="130,3,0,21" Width="191" Grid.Row="7" Height="20" Grid.ColumnSpan="2" Grid.Column="1"/>
                    </Grid>
                    <Label Grid.Row="0" FontSize="24" HorizontalAlignment="Left" Content="Tutaj mają się wyświetlać &#xD;&#xA;wcześniej zaproponowane &#xD;&#xA;wieczorki z opcją usunięcia &#xD;&#xA;jeśli nie zostały jeszcze &#xD;&#xA;potwierdzoneprzez admina &#xD;&#xA;biblioteki" Margin="59,93,0,99" Grid.Column="4" Width="304"/>

                </Grid>
            </TabItem>
            <TabItem Header="Statystyki">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ustawienia">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="245*"/>
                        <ColumnDefinition Width="549*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Wyloguj" Height="39" Width="80" Click="Return" Margin="373,285,96,82" Grid.Column="1"/>
                    <Label Content="Zmiana hasła:" HorizontalAlignment="Left" Margin="61,24,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" Margin="42,70,0,0" TextWrapping="Wrap" Text="Stare hasło" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="42,110,0,0" TextWrapping="Wrap" Text="Nowe hasło" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="42,150,0,0" TextWrapping="Wrap" Text="Nowe hasło" VerticalAlignment="Top" Width="120"/>
                    <Button Content="Zatwierdź" HorizontalAlignment="Left" Height="30" Width="64" Margin="70,0,0,0" VerticalAlignment="Center"/>

                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
