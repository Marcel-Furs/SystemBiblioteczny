<Window x:Class="SystemBiblioteczny.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemBiblioteczny"
        mc:Ignorable="d"
        Title="ClientWindow" Height="432" Width="786" MaxWidth="800" MaxHeight="450" MinWidth="800" MinHeight="450">
    <Grid>
        <TabControl>
            <TabItem Header="Zarezerwuj Książkę" >
                <Grid>
                    <DataGrid x:Name="TableBooks" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="418" Height="229" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header ="Id" Binding="{Binding Id_Book}" Width="40"/>
                            <DataGridTextColumn Header ="Autor" Binding="{Binding Author}" Width="120"/>
                            <DataGridTextColumn Header ="Tytuł" Binding="{Binding Title}" Width="120"/>
                            <DataGridCheckBoxColumn Header ="Dostępność" Binding="{Binding Availability}" Width="65"/>
                            <DataGridTextColumn Header ="Id biblioteki" Binding="{Binding Id_Library}" Width="65"/>
                        </DataGrid.Columns>
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="Turquoise"/>
                                <Setter Property="BorderThickness" Value="0,0,1,2"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
                    <RadioButton Content="Autor" Margin="430,104,300,282"/>
                    <RadioButton Content="Tytuł" Margin="430,129,300,257"/>
                    <Label Content="Pokaż dostępne książki" HorizontalAlignment="Left" Margin="430,51,0,0" VerticalAlignment="Top" Height="48" Width="241" FontSize="22"/>
                    <Button Content="Szukaj" HorizontalAlignment="Left" Margin="718,43,0,0" VerticalAlignment="Top" Width="66" Click="Find" RenderTransformOrigin="0.514,0.564"/>
                    <RadioButton x:Name="OptDostepnosc" Content="" HorizontalAlignment="Left" Margin="676,68,0,0" VerticalAlignment="Top"/>
                    <Label Content="Pokaż wszystkie książki" HorizontalAlignment="Left" Margin="430,10,0,0" VerticalAlignment="Top" Height="48" Width="241" FontSize="22"/>
                    <RadioButton x:Name="OptWszystkie" Content="" HorizontalAlignment="Left" Margin="676,27,0,0" VerticalAlignment="Top"/>

                </Grid>
            </TabItem>
            <TabItem Header="Wieczorki Autorskie">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                    </Grid.ColumnDefinitions>
                    <Grid Margin="24,0,386,16" Grid.ColumnSpan="6">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" FontSize="24" HorizontalAlignment="Left" Content="ZGŁOSZENIE" Margin="124,2,0,2" Width="141"/>
                        <Label  Grid.Row="1" Content="Imię autora:" Margin="0,4,0,4" HorizontalAlignment="Left" Width="191" FontSize="16" />
                        <TextBox x:Name="AuthorsName" Grid.Row="1" HorizontalAlignment="Left" Margin="210,12,0,12" Width="150" Height="20" FontSize="12" />
                        <Label Grid.Row="2" Content="Nazwisko autora:" Margin="0,4,0,4" HorizontalAlignment="Left" Width="191" FontSize="16" Grid.RowSpan="2" />
                        <TextBox Grid.Row="2" x:Name="AuthotsLastname"  HorizontalAlignment="Left" Margin="210,12,0,12" Width="150" Height="20" FontSize="12"/>
                        <Label Grid.Row="3" Content="Numer biblioteki:" HorizontalAlignment="Left" Margin="0,4,0,4" Width="191" FontSize="16" Grid.RowSpan="2" />
                        <TextBox Grid.Row="3" x:Name="LibraryID" HorizontalAlignment="Left" Margin="210,12,0,12" Width="150" Height="20" FontSize="12"/>

                        <Button Grid.Row="8" Click="Register_Evening" FontSize="20" Content="Register" Margin="-7,0,15,3"/>
                        <Label Grid.Row="4" Content="Data:" HorizontalAlignment="Left" Margin="0,4,0,4" Grid.RowSpan="2" Width="191" FontSize="16" />
                        <DatePicker Grid.Row="4" x:Name="Date" HorizontalAlignment="Left" Margin="210,12,0,12" Width="150" Height="20" FontSize="12" Text="Kiedy wieczorer bq"/>
                        <Label Grid.Row="5" Content="Godzina:" HorizontalAlignment="Left" Margin="0,4,0,4" Grid.RowSpan="2" Width="191" FontSize="16" />
                        <Label Grid.Row="6" Content="Czas trwania (w minutach):" HorizontalAlignment="Left" Margin="0,4,0,4" Width="199" FontSize="16" />
                        <Label Grid.Row="7" Content="Telefon kontaktowy:" HorizontalAlignment="Left" Margin="0,4,0,4" Width="191" FontSize="16" />
                        <TextBox Grid.Row="5" x:Name="RegisterLastname" HorizontalAlignment="Left" Margin="210,12,0,12" Width="150" Height="20" FontSize="12"/>
                        <TextBox Grid.Row="6" x:Name="RegisterEmailAddress" HorizontalAlignment="Left" Margin="210,12,0,12" Width="150" Height="20" FontSize="12"/>
                        <TextBox x:Name="RegisterPhoneNumber" HorizontalAlignment="Left" Margin="210,12,0,12" Width="150" Height="20" FontSize="12" Grid.Row="7"/>
                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="Statystyki">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ustawienia">
                <Button Content="Wyloguj" Height="39" Click="Return" Margin="106,0,547,0"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
